---
const { title, text } = Astro.props;
import Button from "../common/Button.astro";
import PhoneIcon from "@icons/call-white.svg";
import QuoteIcon from "@icons/quote-white.svg";
---

<div class="cta-box">
    <h3>{title}</h3>
    <p>{text}</p>
    <div class="cta-buttons">
        <Button href="tel:0405 105 855" type="secondary-dark"
            ><PhoneIcon />Call Us</Button
        >
        <Button href="/contact/#contact" type="primary"
            ><QuoteIcon />Request a quote</Button
        >
    </div>
</div>

<style>
    .cta-box {
        background-color: var(--brand-blue);
        padding: 1rem;
        color: white;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        border-radius: 3px;
        box-shadow: var(--box-shadow);
    }
    h3 {
        font-size: 1.5em;
        color: white;
    }
    .cta-buttons {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin-top: 1rem;
    }
    @media (min-width: 1024px) {
        .cta-box {
            padding: 2rem;
        }
    }
</style>
